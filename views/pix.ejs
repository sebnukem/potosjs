<!DOCTYPE html>
<html>
  <head>
    <title>pix</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  </head>
  <body>
    <h1>Album <%= querypath %></h1>
    <div>
		<p><%= count %> images found</p>
		<div>
			<% files.forEach(function (file) { %>
				<img class="pic" src="<%= path %>/<%= file %>" width="50px" onerror='this.style.display = "none"'>
				<!-- <img class="pic" src="<%= path %>/<%= file %>" width="50px"> -->
			<% }); %>
		</div>
	</div>
	<script>
		// $(function(){
